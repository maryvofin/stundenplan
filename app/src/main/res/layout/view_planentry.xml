<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/view_planentry_text_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="2dp"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/view_planentry_text_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/view_planentry_text_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="2dp"
        android:layout_toLeftOf="@id/view_planentry_text_type"
        android:layout_toStartOf="@id/view_planentry_text_type"
        android:textSize="12sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/view_planentry_text_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_margin="2dp"
        android:layout_toEndOf="@id/view_planentry_text_type"
        android:layout_toRightOf="@id/view_planentry_text_type"
        android:textSize="12sp"
        android:gravity="end"/>

    <TextView
        android:id="@+id/view_planentry_text_room"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/view_planentry_text_label"
        android:layout_margin="2dp"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/view_planentry_text_lecturer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@id/view_planentry_text_label"
        android:layout_margin="2dp"
        android:textSize="12sp"
        android:gravity="end"/>

    <TextView
        android:id="@+id/view_planentry_text_commentcount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_planentry_text_label"
        android:layout_centerHorizontal="true"
        android:layout_margin="2dp"
        android:textSize="12sp"/>



</RelativeLayout>