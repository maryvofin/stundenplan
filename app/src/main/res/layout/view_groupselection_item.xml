<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <CheckBox
        android:id="@+id/view_groupselection_item_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        />

    <TextView
        android:id="@+id/view_groupselection_item_text"
        android:scrollHorizontally="false"
        android:textSize="20sp"
        android:layout_toEndOf="@id/view_groupselection_item_checkbox"
        android:layout_toRightOf="@id/view_groupselection_item_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/view_groupselection_item_lecturer"
        android:scrollHorizontally="false"
        android:textSize="20sp"
        android:paddingRight="5dp"
        android:paddingEnd="5dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>