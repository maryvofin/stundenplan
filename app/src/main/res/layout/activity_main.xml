<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main_drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/activity_main_content"
        android:orientation="vertical">

        <de.maryvofin.stundenplan.ViewPager
            android:id="@+id/activity_main_pager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <android.support.v4.view.ClickablePagerTabStrip
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:textColor="@color/textcolor_pageheader"></android.support.v4.view.ClickablePagerTabStrip>

        </de.maryvofin.stundenplan.ViewPager>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_divider"/>

        <TextView
            android:id="@+id/activity_main_lastupdate_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_divider"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/activity_main_button_about"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:contentDescription="About Button"
                android:src="@android:drawable/ic_menu_info_details"/>

            <ImageView
                android:id="@+id/activity_main_button_settings"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:contentDescription="Settings Button"
                android:src="@android:drawable/ic_menu_preferences"/>

            <ImageView
                android:id="@+id/activity_main_button_today"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:contentDescription="Today Button"
                android:src="@android:drawable/ic_menu_revert"/>



        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/activity_main_leftDrawer"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/bgcolor_activity_main_leftDrawer"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_activity_main_leftdrawer_profile"
            android:textSize="25sp"
            android:textStyle="bold"
            />

        <Spinner
            android:id="@+id/activity_main_leftDrawer_spinner_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></Spinner>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_activity_main_leftdrawer_choice"
            android:textSize="25sp"
            android:textStyle="bold"
            />

        <ExpandableListView
            android:id="@+id/activity_main_leftDrawer_semesterList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </ExpandableListView>


    </LinearLayout>



</android.support.v4.widget.DrawerLayout>