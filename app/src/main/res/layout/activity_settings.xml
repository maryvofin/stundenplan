<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent" android:padding="15dp">


    <TextView
        android:id="@+id/activity_settings_updateinterval_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_settings_updateinterval"
        android:textStyle="bold"

        />

    <Spinner
        android:id="@+id/activity_settings_updateinterval_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity_settings_updateinterval_text"></Spinner>



</RelativeLayout>