<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main_drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/activity_main_content"
        android:orientation="vertical">

        <de.maryvofin.stundenplan.app.ViewPager
            android:id="@+id/pager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <android.support.v4.view.ClickablePagerTabStrip
                android:id="@+id/tabstrip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:textColor="@color/textcolor_pageheader"></android.support.v4.view.ClickablePagerTabStrip>

        </de.maryvofin.stundenplan.app.ViewPager>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/primary"/>

        <TextView
            android:id="@+id/lastupdate_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"/>

    </LinearLayout>

</android.support.v4.widget.DrawerLayout>